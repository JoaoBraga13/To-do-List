<h2>Minhas Tarefas</h2>

<% if (errors.length > 0) { %>
  <ul>
    <% errors.forEach(error => { %>
      <li style="color:red;"><%= error %></li>
    <% }) %>
  </ul>
<% } %>

<% if (success.length > 0) { %>
  <ul>
    <% success.forEach(msg => { %>
      <li style="color:green;"><%= msg %></li>
    <% }) %>
  </ul>
<% } %>

